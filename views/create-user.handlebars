{{!-- Page de création d'utilisateur --}}
<div class="create-user">
    <h1>Créer un utilisateur</h1>

    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    {{#if reussite}}
        <p class="reussite">{{reussite}}</p>
    {{/if}}

    <form action="/create-user" method="POST" class="form">
        <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn-primary">Créer l'utilisateur</button>
    </form>

    <a href="/">
        <button class="btn-secondary">Retour à l'accueil</button>
    </a>
</div>
